{
  "name": "rd-monolith",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "bun --watch src/backend/index.ts",
    "build": "vite-ssg build && bun build src/backend/index.ts --outdir dist/backend",
    "start": "bun dist/backend/index.js",
    "histoire": "histoire dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,vue,json,css,scss,md}\"",
    "type-check": "bun tsc --noEmit --skipLibCheck",
    "clean:modules": "rm -rf node_modules && bun install"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.2.0",
    "@pinia/nuxt": "^0.11.0",
    "@tanstack/vue-table": "^8.21.3",
    "@unhead/vue": "^1.8.10",
    "@vue/test-utils": "^2.4.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "elysia": "^0.8.17",
    "jsdom": "^26.1.0",
    "lucide-vue-next": "^0.503.0",
    "pinia": "^3.0.2",
    "reka-ui": "^2.2.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.2.7",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@histoire/plugin-vue": "^0.17.6",
    "@types/flexsearch": "^0.7.42",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vueuse/core": "^13.1.0",
    "autoprefixer": "^10.4.21",
    "beasties": "^0.3.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-vue": "^10.0.0",
    "histoire": "^0.17.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.31.0",
    "unplugin-auto-import": "^19.1.2",
    "unplugin-vue-components": "^28.5.0",
    "unplugin-vue-router": "^0.12.0",
    "vite": "^5.0.12",
    "vite-ssg": "^0.23.5",
    "vitest": "^1.2.1",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^1.8.27"
  },
  "lint-staged": {
    "*.{js,ts,vue,json,css,scss,md}": "prettier --write",
    "*.{js,ts,vue}": "eslint --fix"
  }
}
