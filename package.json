{
  "name": "rd-monolith",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "pnpm exec vite",
    "dev:backend": "bun --watch src/backend/index.ts",
    "dev:backend:elysia": "bun --watch src/backend/index.elysia.ts",
    "build": "pnpm exec vite build && bun build src/backend/index.ts --outdir dist/backend --target bun",
    "build:elysia": "pnpm exec vite build && bun build src/backend/index.elysia.ts --outdir dist/backend --target bun",
    "start": "bun dist/backend/index.js",
    "start:elysia": "bun dist/backend/index.elysia.js",
    "histoire": "histoire dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,vue,json,css,scss,md}\"",
    "type-check": "npx tsc --noEmit --skipLibCheck",
    "type-check:vue": "vue-tsc --noEmit",
    "check:all": "npm run format && npm run lint && npm run type-check && npm run type-check:vue",
    "clean:modules": "rm -rf node_modules && bun install"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "@intlify/unplugin-vue-i18n": "^6.0.8",
    "@octokit/rest": "^22.0.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@pinia/nuxt": "^0.11.0",
    "@rollercoaster-dev/rd-logger": "^0.1.0",
    "@simplewebauthn/browser": "^13.1.0",
    "@simplewebauthn/server": "^13.1.1",
    "@simplewebauthn/types": "^12.0.0",
    "@tanstack/vue-table": "^8.21.3",
    "@types/cookie": "^1.0.0",
    "@types/nodemailer": "^6.4.17",
    "@unhead/vue": "^1.8.10",
    "@vue/test-utils": "^2.4.6",
    "arctic": "^3.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookie": "^1.0.2",
    "hono": "^4.7.7",
    "hono-sessions": "^0.7.2",
    "jose": "^6.0.10",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-vue-next": "^0.503.0",
    "nodemailer": "^6.10.1",
    "pinia": "^3.0.2",
    "pinia-plugin-persistedstate": "^4.2.0",
    "reka-ui": "^2.2.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.2.7",
    "vue": "^3.4.15",
    "vue-i18n": "^11.1.11",
    "vue-router": "^4.2.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@histoire/plugin-vue": "^0.17.6",
    "@types/bun": "^1.2.10",
    "@types/flexsearch": "^0.7.42",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vueuse/core": "^13.1.0",
    "autoprefixer": "^10.4.21",
    "beasties": "^0.3.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-vue": "^10.0.0",
    "globals": "^16.3.0",
    "histoire": "^0.17.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.31.0",
    "unplugin-auto-import": "^19.1.2",
    "unplugin-vue-components": "^28.5.0",
    "unplugin-vue-router": "^0.12.0",
    "vite": "^5.0.12",
    "vite-ssg": "^0.23.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.2.1",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^3.0.5"
  },
  "lint-staged": {
    "*.{js,ts,vue,json,css,scss,md}": "prettier --write",
    "*.{js,ts,vue}": "eslint --fix"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
